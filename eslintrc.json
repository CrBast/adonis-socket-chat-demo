{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["standard", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "use": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "semi": [2, "always"],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "func-names": "off"
  }
}
